# Idea Digest Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application Environment
# =============================================================================

# Environment: "development", "staging", or "production"
APP_ENV=development

# Enable debug mode for verbose logging
DEBUG=false

# =============================================================================
# Airtable Configuration (required for production)
# =============================================================================

# Your Airtable API key (from https://airtable.com/account)
AIRTABLE_API_KEY=

# Your Airtable base ID (from the API docs for your base)
AIRTABLE_BASE_ID=

# Table name where ideas are stored
AIRTABLE_TABLE_NAME=Ideas

# =============================================================================
# Data Fetching Configuration
# =============================================================================

# Maximum items to fetch per source
DEFAULT_LIMIT_PER_SOURCE=20

# HTTP request timeout in seconds
REQUEST_TIMEOUT=30

# Delay between scraping requests (seconds) - be respectful to servers
SCRAPE_DELAY=2.0

# =============================================================================
# Source API Keys (optional, for higher rate limits)
# =============================================================================

# Product Hunt API token
PRODUCT_HUNT_TOKEN=

# GitHub personal access token
GITHUB_TOKEN=
